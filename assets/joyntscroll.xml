<?xml version="1.0" encoding="UTF-8"?>
<debate-format schema-version="2.0">
	<name>Joynt Scroll</name>

	<info>
		<region>New Zealand</region>
		<level>University</level>
		<used-at>New Zealand Universities Prepared Debating Championships</used-at>
		<description>3 vs 3, 10-minute speeches, 5-minute replies, POIs allowed</description>
	</info>

	<speech-types>
		<resource ref="#all">
			<period ref="warning">
				<description>Warning bell rung</description>
				<bgcolor>#77ffcc00</bgcolor>
			</period>
			<period ref="overtime">
				<description>Overtime</description>
				<bgcolor>#77ff0000</bgcolor>
			</period>
			<bell>
				<time relative-to="finish">-1:00</time>
				<number>1</number>
				<next-period ref="warning"/>
				<sound>#default</sound>
			</bell>
			<bell>
				<time relative-to="finish">0</time>
				<number>2</number>
				<next-period ref="overtime"/>
				<sound>#default</sound>
			</bell>
		</resource>

		<speech-type ref="substantive">
			<length>10:00</length>
			<first-period ref="firstmin"/>
			<period ref="firstmin">
				<description>First minute</description>
				<bgcolor>#stay</bgcolor>
			</period>
			<period ref="pois-allowed">
				<description>POIs allowed</description>
				<bgcolor>#7700ff00</bgcolor>
				<pois-allowed/>
			</period>
			<bell>
				<time>1:00</time>
				<number>1</number>
				<next-period ref="pois-allowed"/>
				<sound>#default</sound>
			</bell>
		</speech-type>

		<speech-type ref="reply">
			<length>5:00</length>
			<first-period ref="main"/>
			<period ref="main">
				<description>Main part</description>
				<bgcolor>#stay</bgcolor>
			</period>
		</speech-type>
	</speech-types>

	<speeches>
		<speech type="substantive">
			<name>1st Affirmative</name>
		</speech>
		<speech type="substantive">
			<name>1st Negative</name>
		</speech>
		<speech type="substantive">
			<name>2nd Affirmative</name>
		</speech>
		<speech type="substantive">
			<name>2nd Negative</name>
		</speech>
		<speech type="substantive">
			<name>3rd Affirmative</name>
		</speech>
		<speech type="substantive">
			<name>3rd Negative</name>
		</speech>
		<speech type="reply">
			<name>Negative Leader's Reply</name>
		</speech>
		<speech type="reply">
			<name>Affirmative Leader's Reply</name>
		</speech>
	</speeches>
</debate-format>
