<?xml version="1.0" encoding="UTF-8"?>
<debateformat schemaversion="2.0">
	<name>Joynt Scroll</name>

	<info>
		<region>New Zealand</region>
		<level>University</level>
		<usedat>New Zealand Universities Prepared Debating Championships</usedat>
		<desc>3 vs 3, 10-minute speeches, 5-minute replies, POIs allowed</desc>
	</info>

	<resource ref="#all">
		<period ref="warning">
			<description>Warning bell rung</description>
			<bgcolor>#77ffcc00</bgcolor>
		</period>
		<period ref="overtime">
			<description>Overtime</description>
			<bgcolor>#77ff0000</bgcolor>
		</period>
	</resource>

	<speechtype ref="substantive">
		<length>10:00</length>
		<firstperiod ref="firstmin"/>
		<period ref="firstmin">
			<description>First minute</description>
			<bgcolor>#stay</bgcolor>
		</period>
		<period ref="pois-allowed">
			<description>POIs allowed</description>
			<bgcolor>#7700ff00</bgcolor>
			<pois-allowed/>
		</period>
		<bell>
			<time>1:00</time>
			<number>1</number>
			<nextperiod ref="pois-allowed"/>
			<sound>#default</sound>
		</bell>
		<bell>
			<time refpoint="finish">-1:00</time>
			<number>1</number>
			<nextperiod ref="warning"/>
			<sound>#default</sound>
		</bell>
		<bell>
			<time refpoint="finish">0</time>
			<number>2</number>
			<nextperiod ref="overtime"/>
			<sound>#default</sound>
		</bell>
	</speechtype>

	<speechtype ref="reply">
		<length>5:00</length>
		<firstperiod ref="main"/>
		<period ref="main">
			<description>Main part</description>
			<bgcolor>#stay</bgcolor>
		</period>
		<bell>
			<time refpoint="finish">-1:00</time>
			<number>1</number>
			<nextperiod ref="warning"/>
			<sound>#default</sound>
		</bell>
		<bell>
			<time refpoint="finish">0</time>
			<number>2</number>
			<nextperiod ref="overtime"/>
			<sound>#default</sound>
		</bell>
	</speechtype>

	<speeches>
		<speech type="substantive">
			<name>1st Affirmative</name>
		</speech>
		<speech type="substantive">
			<name>1st Negative</name>
		</speech>
		<speech type="substantive">
			<name>2nd Affirmative</name>
		</speech>
		<speech type="substantive">
			<name>2nd Negative</name>
		</speech>
		<speech type="substantive">
			<name>3rd Affirmative</name>
		</speech>
		<speech type="substantive">
			<name>3rd Negative</name>
		</speech>
		<speech type="reply">
			<name>Negative Leader's Reply</name>
		</speech>
		<speech type="reply">
			<name>Affirmative Leader's Reply</name>
		</speech>
	</speeches>
</debateformat>
