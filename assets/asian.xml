<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="Asian Parliamentary" schemaversion="1.0">
	<info>
		<region>Asia</region>
		<level>University</level>
		<usedat>United Asian Debating Championship</usedat>
		<desc>3 vs 3, 7-minute speeches, 4-minute replies, POIs allowed</desc>
	</info>
	
	<resource ref="#all">
		<period ref="warning" desc="Warning bell rung" bgcolor="#77ffcc00" />
		<period ref="overtime" desc="Overtime" bgcolor="#77ff0000" />
	</resource>

	<speechtype ref="substantive" length="7:00" firstperiod="firstmin">
		<period ref="firstmin" desc="First minute" bgcolor="#stay" />
		<period ref="pois-allowed" name="POIs allowed" bgcolor="#7700ff00" />
   		<bell time="1:00" number="1" nextperiod="pois-allowed" sound="#default" />
		<bell time="6:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechtype>
	
	<speechtype ref="reply" length="4:00" firstperiod="main">
		<period ref="main" desc="Main part" bgcolor="#stay" />
		<bell time="3:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechtype>
	
	<speeches>
		<speech name="Prime Minister" type="substantive" />
		<speech name="Leader of Opposition" type="substantive" />
		<speech name="Deputy Prime Minister" type="substantive" />
		<speech name="Deputy Leader of Opposition" type="substantive" />
		<speech name="Government Whip" type="substantive" />
		<speech name="Opposition Whip" type="substantive" />
		<speech name="Opposition Reply" type="reply" />
		<speech name="Government Reply" type="reply" />
	</speeches>
</debateformat>
