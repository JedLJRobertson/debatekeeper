<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="Thropy">
	<info>
		<region>New Zealand</region>
		<level>University</level>
		<usedat>New Zealand North Island Novice Debating Championships preliminary rounds</usedat>
		<desc>3 vs 3, 6-minute speeches, 3-minute replies, POIs allowed</desc>
	</info>

	<resource ref="#all">
		<period ref="initial" desc="First minute" bgcolor="#stay" />
		<period ref="warning" desc="Warning bell rung" bgcolor="#77ffcc00" />
		<period ref="overtime" desc="Overtime" bgcolor="#77ff0000" />
	</resource>

	<speechtype ref="substantive" length="6:00" firstperiod="initial">
		<period ref="pois-allowed" name="POIs allowed" bgcolor="#7700ff00" />
   		<bell time="1:00" number="1" nextperiod="pois-allowed" sound="#default" />
		<bell time="5:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechtype>
	
	<speechtype ref="reply" length="3:00" firstperiod="initial">
		<bell time="2:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechtype>
	
	<speeches>
		<speech name="1st Affirmative" type="substantive" />
		<speech name="1st Negative" type="substantive" />
		<speech name="2nd Affirmative" type="substantive" />
		<speech name="2nd Negative" type="substantive" />
		<speech name="3rd Affirmative" type="substantive" />
		<speech name="3rd Negative" type="substantive" />
		<speech name="Negative Leader's Reply" type="reply" />
		<speech name="Affirmative Leader's Reply" type="reply" />
	</speeches>
</debateformat>
