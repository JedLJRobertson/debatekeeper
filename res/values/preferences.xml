    <string name="pref_vibrateMode_onSummary">Vibrate at bell times</string>
    <string name="pref_vibrateMode_offSummary">Don\'t vibrate</string>
    <bool   name="prefDefault_vibrateMode">false</bool>

    <!-- Flash screen -->
    <string name="pref_flashScreenMode_title">Flash screen</string>
    <string-array name="pref_flashScreenMode_summaries">
        <item>Don\'t flash screen</item>
        <item>Do a strobe flash at bell times</item>
        <item>Flash screen white briefly at bell times</item>
    </string-array>
    <string-array name="pref_flashScreenMode_entries">
        <item>Off</item>
        <item>Strobe flash</item>
        <item>Solid flash</item>
    </string-array>
    <string-array name="pref_flashScreenMode_values">
        <item>off</item>
        <item>strobeFlash</item>
        <item>solidFlash</item>
    </string-array>
    <string name="prefDefault_flashScreenMode">off</string>

    <!-- Overtime bells -->
    <string name="pref_overtimeBellsEnable_title">Enable overtime bells</string>
    <string name="pref_overtimeBellsEnable_onSummary">Ring overtime bells as specified below</string>
    <string name="pref_overtimeBellsEnable_offSummary">Don\'t ring any overtime bells</string>
    <bool   name="prefDefault_overtimeBellsEnable">true</bool>

    <string name="pref_firstOvertimeBell_title">First overtime bell</string>
    <string name="pref_firstOvertimeBell_summary">Ring the first overtime bell after %s seconds…</string>
    <string name="pref_firstOvertimeBell_dialogMessage">"The time after finish in seconds of the first overtime bell:"</string>
    <integer name="prefDefault_firstOvertimeBell">15</integer>

    <string name="pref_overtimeBellPeriod_title">Overtime bell period</string>
    <string name="pref_overtimeBellPeriod_summary">…and then every %s seconds after that</string>
    <string name="pref_overtimeBellPeriod_dialogMessage">"The time between overtime bells (after the first) in seconds:"</string>
    <integer name="prefDefault_overtimeBellPeriod">15</integer>

    <!-- Count direction -->
    <string name="pref_countDirection_title">Count direction</string>
    <string-array name="pref_countDirection_summaries">
        <item>Count up</item>
        <item>Count down</item>
    </string-array>
    <string-array name="pref_countDirection_entries">
        <item>Count up</item>
        <item>Count down</item>
    </string-array>
    <!-- In case you're wondering, the reason these are called alwaysUp and alwaysDown is because
    there used to be options called generallyUp and generallyDown. These options were obsoleted
    in version 0.9, but to retain compatibility we keep the values for the other two as they
    were before. Since the user never sees these, it doesn't matter what they're called. -->
    <string-array name="pref_countDirection_values">
        <item>alwaysUp</item>
        <item>alwaysDown</item>
    </string-array>
    <string name="prefDefault_countDirection">alwaysUp</string>

    <!-- Keep screen on -->
    <string name="pref_keepScreenOn_title">Keep screen on</string>
    <string name="pref_keepScreenOn_onSummary">Keep screen on (dimmed) while timer is running</string>
    <string name="pref_keepScreenOn_offSummary">Apply normal screen timeout</string>
    <bool   name="prefDefault_keepScreenOn">true</bool>

    <!-- *** Preparation time *** -->
    <string name="pref_prepTimer_enable_title">Enable prep timer</string>
    <string name="pref_prepTimer_enable_onSummary">Use the preparation timer</string>
    <string name="pref_prepTimer_enable_offSummary">"Don't use the preparation timer"</string>
    <bool   name="prefDefault_prepTimer_enable">true</bool>

    <string-array name="pref_prepTimer_countDirection_summaries">
        <item>Count up in the prep timer</item>
        <item>Count down in the prep timer</item>
    </string-array>
    <string name="prefDefault_prepTimer_countDirection">alwaysDown</string>

    <string name="pref_prepTimer_keepScreenOn_onSummary">Keep screen on (dimmed) while prep timer is running</string>
