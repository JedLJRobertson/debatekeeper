    <string name="pref_poiTimer_enable_onSummary">Show the POIs timer when appropriate</string>
    <string name="pref_poiTimer_enable_offSummary">Hide the POIs timer</string>
    <bool   name="prefDefault_poiTimer_enable">true</bool>

    <string name="pref_poiTimer_buzzerEnable_title">Play buzzer</string>
    <string name="pref_poiTimer_buzzerEnable_onSummary">Play a buzzer when POI time expires</string>
    <string name="pref_poiTimer_buzzerEnable_offSummary">Don\'t play POI buzzers</string>
