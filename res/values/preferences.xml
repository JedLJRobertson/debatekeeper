    <string name="pref_poiTimer_flashScreenMode_dialogTitle">Flash screen for POIs</string>
    <string-array name="pref_poiTimer_flashScreenMode_summaries">
        <item>Don\'t flash screen for POIs</item>
        <item>Do a strobe flash when POI time expires</item>
        <item>Flash screen blue briefly when POI time expires</item>
    </string-array>
    <!-- For the entries and entry values, use the same ones as the main flash screen preference -->
    <string name="prefDefault_poiTimer_flashScreenMode">solidFlash</string>

    <string name="pref_poiTimer_learnMore_title">Learn more</string>
    <string name="pref_poiTimer_learnMore_summary">Learn more about the POIs timer (launches web browser)</string>

