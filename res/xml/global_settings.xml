<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:picker="http://schemas.android.com/apk/res/com.michaelnovakjr.sample.numberpicker" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="silentMode"
        android:summaryOff="@string/PreferenceSilentModeOffSummary"
        android:summaryOn="@string/PreferenceSilentModeOnSummary"
        android:title="@string/PreferenceSilentModeTitle" />
    <CheckBoxPreference
        android:key="vibrateMode"
        android:summaryOff="@string/PreferenceVibrateModeOffSummary"
        android:summaryOn="@string/PreferenceVibrateModeOnSummary"
        android:title="@string/PreferenceVibrateMode" />

    <com.michaelnovakjr.numberpicker.NumberPickerPreference
        android:key="firstOvertimeBell"
        android:summary="@string/PreferenceFirstOvertimeBellSummary"
        android:title="@string/PreferenceFirstOvertimeBellTitle" />
    <com.michaelnovakjr.numberpicker.NumberPickerPreference
        android:key="overtimeBellPeriod"
        android:summary="@string/PreferenceOvertimeBellPeriodSummary"
        android:title="@string/PreferenceOvertimeBellPeriodTitle" />

</PreferenceScreen>