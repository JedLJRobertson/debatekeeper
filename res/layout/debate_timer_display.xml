<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" >

        <TextView
            android:id="@+id/speechNameText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="4dip"
            android:gravity="center_horizontal"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/periodDescriptionText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/speechNameText"
            android:gravity="center_horizontal"
            android:textSize="14dip" />

        <TextView
            android:id="@+id/currentTime"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="72dip" />

        <TextView
            android:id="@+id/finalTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dip"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/nextTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/finalTime"
            android:gravity="center_horizontal" />
    </RelativeLayout>