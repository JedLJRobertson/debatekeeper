<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/viewFormat_fileNameLabel"
        style="@style/ViewFormat_TableLabel"
        android:text="@string/viewFormat_fileNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:id="@+id/viewFormat_fileNameValue"
        style="@style/ViewFormat_TableValue"
        android:layout_toRightOf="@id/viewFormat_fileNameLabel"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/viewFormat_fileLocationValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/viewFormat_fileNameValue"
        android:layout_below="@id/viewFormat_fileNameValue"
        android:visibility="gone"
        android:textStyle="italic" />
    
</RelativeLayout>