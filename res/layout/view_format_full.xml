<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- File info row -->
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/view_format_file_info" />
        
        <!-- Information from the <info> element -->
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/view_format_short" />

        <!-- Prep time row -->
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="7dip"
		    android:id="@+id/ViewFormatPrepTimeRow" >
    
	   	    <TextView
		        android:id="@+id/ViewFormatPrepTimeLabel"
		        style="@style/ViewFormatTableLabelStyle"
		        android:text="@string/ViewFormatPrepTimeLabel"
		         />
		
		    <TextView
		        android:id="@+id/ViewFormatPrepTimeValue"
		        style="@style/ViewFormatTableValueStyle"
		        android:layout_toRightOf="@id/ViewFormatPrepTimeLabel"
		         />
		
		</RelativeLayout>

		<!-- Speeches table -->
        <TextView
            android:id="@+id/ViewFormatSpeechesLabelText"
            style="@style/ViewFormatTableLabelStyle"
            android:text="@string/ViewFormatSpeechesLabel" />

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ViewFormatTableSpeechTypes"
            style="@style/ViewFormatTableSpeechesStyle"
            android:shrinkColumns="1" />

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ViewFormatTableSpeeches"
            style="@style/ViewFormatTableSpeechesStyle"
            android:shrinkColumns="0" />
    </LinearLayout>

</ScrollView>