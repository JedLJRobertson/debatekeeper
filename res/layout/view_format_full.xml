<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/view_format_short" />

        <TextView
            android:id="@+id/ViewFormatSpeechesLabelText"
            style="@style/ViewFormatTableLabelStyle"
            android:text="@string/ViewFormatSpeechesLabel" />

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ViewFormatTableSpeechTypes"
            style="@style/ViewFormatTableSpeechesStyle"
            android:shrinkColumns="1" />

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ViewFormatTableSpeeches"
            style="@style/ViewFormatTableSpeechesStyle"
            android:shrinkColumns="0" />
    </LinearLayout>

</ScrollView>