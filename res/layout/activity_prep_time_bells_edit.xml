<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/prepTimeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/prepTimeAddBellButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/PrepTimeAddBellText" />
        <Button
            android:id="@+id/prepTimeClearAllButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/PrepTimeClearAllText" />
    </LinearLayout>

    <ListView
        android:id="@+id/prepTimeBellsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prepTimeButtons" >
    </ListView>

</RelativeLayout>